<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal -->
    <style name="Theme.DiangoPos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <item name="colorError">@color/error</item>
        
        <!-- Personalização da ActionBar -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>
    
    <!-- ActionBar customizada -->
    <style name="CustomActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/primary</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>
    
    <!-- Título da ActionBar -->
    <style name="ActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Estilos de botão -->
    <style name="PaymentButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/payment_button_width</item>
        <item name="android:layout_height">@dimen/payment_button_height</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:elevation">@dimen/card_elevation</item>
    </style>
    
    <!-- Botão de crédito -->
    <style name="CreditCardButton" parent="PaymentButton">
        <item name="backgroundTint">@color/credit_card</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <!-- Botão de débito -->
    <style name="DebitCardButton" parent="PaymentButton">
        <item name="backgroundTint">@color/debit_card</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <!-- Botão PIX -->
    <style name="PixButton" parent="PaymentButton">
        <item name="backgroundTint">@color/pix</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <!-- Cards -->
    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>
    
    <!-- Campos de entrada -->
    <style name="InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>
    
    <!-- Texto de valor grande -->
    <style name="AmountText">
        <item name="android:textSize">@dimen/amount_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- Título de seção -->
    <style name="SectionTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>
    
    <!-- Status chips -->
    <style name="StatusChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_margin">@dimen/margin_xs</item>
        <item name="chipCornerRadius">16dp</item>
    </style>
    
    <!-- Status aprovado -->
    <style name="StatusApprovedChip" parent="StatusChip">
        <item name="chipBackgroundColor">@color/status_approved</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <!-- Status pendente -->
    <style name="StatusPendingChip" parent="StatusChip">
        <item name="chipBackgroundColor">@color/status_pending</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <!-- Status recusado -->
    <style name="StatusDeclinedChip" parent="StatusChip">
        <item name="chipBackgroundColor">@color/status_declined</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
</resources>