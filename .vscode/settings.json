// .vscode/settings.json
{
  "java.home": "/usr/lib/jvm/java-11-openjdk-amd64", // Ajustar para seu sistema
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.import.gradle.enabled": true,
  "java.import.gradle.wrapper.enabled": true,
  
  // Kotlin settings
  "kotlin.languageServer.enabled": true,
  "kotlin.debugAdapter.enabled": true,
  
  // Android settings
  "android.home": "/home/user/Android/Sdk", // Ajustar para seu ANDROID_HOME
  
  // File associations
  "files.associations": {
    "*.gradle": "groovy",
    "*.kt": "kotlin",
    "*.xml": "xml"
  },
  
  // Exclude files from explorer
  "files.exclude": {
    "**/.gradle": true,
    "**/build": true,
    "**/.idea": true,
    "**/*.iml": true
  },
  
  // Editor settings
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "[kotlin]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[java]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[xml]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  
  // Terminal settings
  "terminal.integrated.env.linux": {
    "ANDROID_HOME": "/home/user/Android/Sdk",
    "PATH": "${env:PATH}:/home/user/Android/Sdk/platform-tools:/home/user/Android/Sdk/cmdline-tools/latest/bin"
  },
  "terminal.integrated.env.osx": {
    "ANDROID_HOME": "/Users/user/Library/Android/sdk",
    "PATH": "${env:PATH}:/Users/user/Library/Android/sdk/platform-tools:/Users/user/Library/Android/sdk/cmdline-tools/latest/bin"
  }
}